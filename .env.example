# SGU-HRM Environment Variables
# Copy this file to .env and fill in the values

# Database
DATABASE_URL="postgresql://sguhrm:sguhrm_secret@localhost:5432/sguhrm?schema=public"
POSTGRES_USER=sguhrm
POSTGRES_PASSWORD=sguhrm_secret
POSTGRES_DB=sguhrm

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_secret
MINIO_BUCKET=sgu-hrm

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API
API_PORT=3001
API_PREFIX=api/v1

# Frontend URLs
HRM_APP_URL=http://localhost:3000
CMS_PORTAL_URL=http://localhost:3002

# Email (optional for Phase 1)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
